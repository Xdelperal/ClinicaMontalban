<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clinicamvm.controller.CitaController">
    <stylesheets>
        <URL value="@css/pendientes.css" />
    </stylesheets>

    <TableView fx:id="tablaPendientes" prefHeight="920.0" prefWidth="1520.0">
        <columns>
            <TableColumn fx:id="colCita" text="Numero Cita" />
            <TableColumn fx:id="colCliente" text="id Cliente" />
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colFecha" text="Fecha" />
            <TableColumn fx:id="colHora" text="Hora" />
            <TableColumn fx:id="colMotivo" text="Motivo" />
            <TableColumn fx:id="colButton" text="Acceder" />
        </columns>
        <!-- Configurar la alineación automática de las columnas -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</AnchorPane>
